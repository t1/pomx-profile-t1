<?xml version="1.0" encoding="UTF-8" ?>
<project
        xmlns="urn:xsd:maven:pomx:5.0.0"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="urn:xsd:maven:pomx:5.0.0 https://raw.githubusercontent.com/t1/pomx/master/src/main/resources/schemas/pomx-5.0.0.xsd">

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>

        <junit.version>5.4.2</junit.version>
        <mockito.version>2.27.0</mockito.version>
    </properties>

    <distributionManagement>
        <repository>
            <id>bintray-t1-javaee-helpers</id>
            <name>t1-javaee-helpers</name>
            <url>https://api.bintray.com/maven/t1/javaee-helpers/${project.artifactId}/;publish=1</url>
        </repository>
    </distributionManagement>

    <licenses>
        <license>
            <name>Apache License 2.0</name>
            <url>https://www.apache.org/licenses/LICENSE-2.0.html</url>
            <distribution>repo</distribution>
        </license>
    </licenses>

    <repositories>
        <repository>
            <id>bintray</id>
            <name>bintray</name>
            <url>http://jcenter.bintray.com</url>
        </repository>
    </repositories>

    <scm>
        <developerConnection>scm:git:https://github.com/t1/${project.artifactId}</developerConnection>
        <tag>HEAD</tag>
    </scm>

    <build>
        <defaultGoal>install</defaultGoal>
        <finalName>${project.artifactId}</finalName>
        <resources>
            <resource>
                <directory>src/main/java</directory>
                <excludes>
                    <exclude>*.java</exclude>
                </excludes>
            </resource>
        </resources>
        <testResources>
            <testResource>
                <directory>src/test/java</directory>
                <excludes>
                    <exclude>*.java</exclude>
                </excludes>
            </testResource>
        </testResources>
        <plugins>
            <plugin id="org.codehaus.mojo:versions-maven-plugin:2.7">
                <configuration>
                    <rulesUri>
                        ${session.localRepository.url}/com/github/t1/profile-t1/${com.github.t1.profile-t1.version}/profile-t1-${com.github.t1.profile-t1.version}.rules.xml
                    </rulesUri>
                </configuration>
            </plugin>
            <plugin id="org.apache.maven.plugins:maven-compiler-plugin:3.8.0">
                <configuration>
                    <source>${java.specification.version}</source>
                    <target>${java.specification.version}</target>
                    <showWarnings>true</showWarnings>
                    <showDeprecation>true</showDeprecation>
                    <encoding>utf8</encoding>
                    <fork>true</fork>
                    <compilerArgument>-parameters</compilerArgument>
                </configuration>
            </plugin>
            <plugin id="org.apache.maven.plugins:maven-enforcer-plugin:3.0.0-M2">
                <dependencies>
                    <dependency>org.sonatype.ossindex.maven:ossindex-maven-enforcer-rules:3.0.4</dependency>
                </dependencies>
                <executions>
                    <execution>
                        <phase>validate</phase>
                        <goals>
                            <goal>enforce</goal>
                        </goals>
                        <configuration>
                            <rules>
                                <banVunerableDependencies
                                        implementation="org.sonatype.ossindex.maven.enforcer.BanVulnerableDependencies"/>
                                <requireMavenVersion>
                                    <version>3.5.2</version>
                                </requireMavenVersion>
                            </rules>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin id="org.apache.maven.plugins:maven-surefire-plugin:2.22.1"/>
            <plugin id="org.apache.maven.plugins:maven-war-plugin:3.2.2">
                <configuration>
                    <archive>
                        <addMavenDescriptor>false</addMavenDescriptor>
                        <manifest>
                            <addDefaultImplementationEntries>true</addDefaultImplementationEntries>
                        </manifest>
                    </archive>
                </configuration>
            </plugin>
            <plugin id="org.apache.maven.plugins:maven-jar-plugin:3.1.1">
                <configuration>
                    <archive>
                        <addMavenDescriptor>false</addMavenDescriptor>
                        <manifest>
                            <addDefaultImplementationEntries>true</addDefaultImplementationEntries>
                        </manifest>
                    </archive>
                </configuration>
            </plugin>
            <plugin id="org.apache.maven.plugins:maven-failsafe-plugin:2.22.1">
                <executions>
                    <execution>
                        <id>perform-it</id>
                        <goals>
                            <goal>integration-test</goal>
                            <goal>verify</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin id="org.apache.maven.plugins:maven-javadoc-plugin:3.0.1">
                <configuration>
                    <additionalparam>-Xdoclint:none</additionalparam>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <provided>
            <jar>org.projectlombok:lombok:1.18.6</jar>
            <jar>org.jetbrains:annotations:17.0.0</jar>
        </provided>

        <test>
            <jar>org.junit.jupiter:junit-jupiter-api:${junit.version}</jar>
            <jar>org.mockito:mockito-core:${mockito.version}</jar>
            <jar>org.mockito:mockito-junit-jupiter:${mockito.version}</jar>
            <jar>org.assertj:assertj-core:3.12.2</jar>
        </test>
    </dependencies>
</project>
